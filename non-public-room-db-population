begin;
insert into subscription (author_id, room_id, created_at, is_active, privilege)
values (
    40,
    4,
    now(),
    true,
    'USER'
);

                        SELECT * FROM subscription
                        JOIN author ON subscription.author_id = author.id
                        JOIN room ON room.id = subscription.room_id
                        WHERE subscription.author_id = 40
                        ORDER BY room.created_at DESC
                        LIMIT 10 OFFSET 0;